pipeline {
  agent none
  stages {
    stage ('Build') {
      agent { label 'slave_server2' }
      steps {
        sh 'sudo mvn deploy'
        sh 'pwd'
        echo "deploy_done"
      }
    }
    stage ('Deploy') {
      agent { label 'slave_server1' }
      steps {
        sh 'pwd'
        sh 'whoami'
        sh 'curl -u akshaykumarbagade18@gmail.com:Devops@akshay03 -O https://akshaybagde.jfrog.io/artifactory/libs-release-local/com/efsavage/hello-world-war/${BUILD_VERSION}/hello-world-war-${BUILD_VERSION}.war'
        sh 'sudo cp -R hello-world-war-${BUILD_VERSION}.war /opt/apache-tomcat-10.0.27/webapps/'
        sh 'sudo sh /opt/apache-tomcat-10.0.27/bin/shutdown.sh'
        sh 'sleep 3'
        sh 'sudo sh /opt/apache-tomcat-10.0.27/bin/startup.sh'
      }
    }
  }
}
